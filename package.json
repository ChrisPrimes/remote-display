{
  "name": "com.chrisprimes.signage",
  "productName": "Remote Display",
  "version": "2.1.1",
  "description": "",
  "main": "main.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "make": "electron-builder --publish=never"
  },
  "author": "Chris Primes",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-log": "^5.4.2"
  },
  "build": {
    "appId": "com.chrisprimes.signage",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64",
            "armv7l"
          ]
        }
      ]
    }
  }
}